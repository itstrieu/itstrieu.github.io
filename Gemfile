# Specify the source for gems
source "https://rubygems.org"

# Millennial theme dependency
gem "millennial", "~> 2.0.0"

# Jekyll and its plugins
gem "jekyll-feed", "~> 0.6"
gem "jekyll-paginate", "~> 1.1"
gem "jekyll-seo-tag", "~> 2.6"
gem "jekyll-sitemap", "~> 1.3"

# You can also specify platform-specific dependencies if needed
# This is important for Windows platforms (x64-mingw-ucrt)
platforms :mingw, :x64_mingw, :mswin do
  gem "webrick", "~> 1.7"
end

# Ensure you are using the same bundler version
gem "bundler", ">= 2.5.20"
